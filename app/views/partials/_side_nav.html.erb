        <% @shortTweets.each do |insert| %>
            <div class="tweets"><li class="sidebar-li-links">
                <li class="twit-thumb" style="background-image: url(<%= insert[:image] %>);
                background-size: cover; background-position: center;"></li>
                <li class="twit-post">
                    <div class="tweet_name"><%= insert[:name] %></div>
                    <br>
                    <div><%= insert[:body] %></div>
                </li>
            </div>
        <% end %>
