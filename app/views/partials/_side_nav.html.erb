    <ul class="sidebar-ul">
        <div class="sidebar-div-link"><li class="sidebar-li-links"><a href=<%=dashboard_path %>><i class="fa fa-tachometer" aria-hidden="true"></i>Dashboard</a></li></div>
        <div class="sidebar-div-link"><li class="sidebar-li-links"><a href="#"><i class="fa fa-usd" aria-hidden="true"></i>Portfolio</a></li></div>
        <div class="sidebar-div-link"><li class="sidebar-li-links"><a href=<%=news_path %>><i class="fa fa-newspaper-o" aria-hidden="true"></i>News</a></li></div>
        <div class="sidebar-div-link"><li class="sidebar-li-links"><a href="#"><i class="fa fa-info-circle" aria-hidden="true"></i>Help</a></li></div>
